	"scripts": {
		"website:dev": "vite",
		"website:build": "vite build",
		"monitor:dev": "chokidar \"**/*.go\" \"monitor/config.yml\" -c \"cd monitor; go run main.go\"",
		"monitor:build": "cd monitor; go build -o run",
		"repo:cp": "cp monitor/run template-repo && cp -r public template-repo/",
		"repo:build": "npm run website:build && npm run monitor:build && npm run repo:cp"
	},
	"devDependencies": {
		"autoprefixer": "^10.3.1",
		"chokidar-cli": "^3.0.0",
		"postcss": "^8.3.6",
		"vite": "^2.4.4"
	},
